<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron">
    <h2>Welcome to the Photo Management App!</h2>
    <p class="lead">
      You'll love managing your Photos with our application. Sign up!
    </p>
  </div>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <h2>Premium Plan</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Price: $10</h5>
            <div class="card-text">
                <ul>
                    <li>Unlimited Image Uploads</li>
                    <li>Responsive design</li>
                    <li>Access anywhere</li>
                </ul>
            </div>
            <p>
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
            </p>
        </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <h2>Amaze Plan</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Price: $10</h5>
            <div class="card-text">
                <ul>
                    <li>Unlimited Image Uploads</li>
                    <li>Responsive design</li>
                    <li>Access anywhere</li>
                    <li class='extra'>Unlimited projects</li>
                </ul>
            </div>
            <p>
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
            </p>
        </div>  
    </div>
  </div>
</div>

<% end %>